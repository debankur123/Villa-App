@model Villa

<body class="container bg-light">
    <div class="text-center pt-5">
        <h2>Create Villa</h2>
        <p>Enter the details of the new villa below.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form id="toastNotification" method="post" class="needs-validation" enctype="multipart/form-data">

                <!-- Villa Name -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Villa Name</label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter villa name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <small class="form-text text-muted">Please fill in the villa name.</small>
                </div>

                <!-- Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control shadow-sm" placeholder="Enter description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control shadow-sm" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Square Feet -->
                <div class="form-group mb-3">
                    <label asp-for="Sqft" class="form-label">Square Feet</label>
                    <input asp-for="Sqft" class="form-control shadow-sm" placeholder="Enter square feet" />
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>

                <!-- Occupancy -->
                <div class="form-group mb-3">
                    <label asp-for="Occupancy" class="form-label">Occupancy</label>
                    <input asp-for="Occupancy" class="form-control shadow-sm" placeholder="Enter occupancy" />
                    <span asp-validation-for="Occupancy" class="text-danger"></span>
                </div>

                <!-- Image Preview and Upload -->
                <div class="form-group mb-3">
                    <label asp-for="Image" class="form-label">Villa Image</label>
                    @* Show existing image preview if it exists *@
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-3 text-center">
                            <img src="~/@Model.ImageUrl" alt="Villa Image" class="img-thumbnail" style="max-height: 200px;">
                        </div>
                    }
                    <input asp-for="Image" type="file" class="form-control shadow-sm" placeholder="Select Image" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger btn-sm shadow-sm w-100 d-flex align-items-center justify-content-center">
                            <ion-icon name="checkmark-circle-outline" class="me-1 ionic-icons align-middle"></ion-icon>SUBMIT
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" asp-controller="Villa" class="btn btn-outline-dark btn-sm shadow-sm w-100 d-flex align-items-center justify-content-center">
                            <ion-icon name="close-circle-sharp" class="me-1 ionic-icons align-middle"></ion-icon>DISCARD
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>



<style>
    .btn-outline {
        color: #4fbfa8;
        background-color: #ffffff;
        border-color: #4fbfa8;
        font-weight: bold;
        letter-spacing: 0.05em;
    }

    .btn-outline:hover,
    .btn-outline:active,
    .btn-outline:focus,
    .btn-outline.active {
        background: #4fbfa8;
        color: #ffffff;
        border-color: #4fbfa8;
    }

    .btn-colour-1 {
        color: #fff;
        background-color: #004E64;
        border-color: #004E64;
        font-weight: bold;
        letter-spacing: 0.05em;
        border-radius: 0;
    }

</style>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
