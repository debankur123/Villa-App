@model Villa

<div class="modal fade" id="DeleteProduct-@Model.Id" aria-labelledby="DeleteProductLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" style="text-align: center;" id="deleteProductLabel">Delete Villa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <p>Are you sure you want to delete this record?</p>
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.Id)</div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-outline" data-bs-dismiss="modal" aria-label="Close">
                            <span><i class="material-icons align-middle me-1">cancel</i></span>CANCEL
                        </button>
                        <button type="submit" class="btn btn-danger" asp-area="" asp-controller="Villa"
                            asp-action="DeleteVilla">
                            <span><i class="material-icons align-middle me-1">delete</i></span>DELETE
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-x6MlryVmCqcO1hrBzACPrH6N2HpECFyMzjhsfS9vJE0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-CBQgW/1J+7mYRto20P7KoRMtr4xoXRwsj+Yfcvd9irB26BO/1+BSNxss5KICDDDa"
        crossorigin="anonymous"></script>
}
<style>
    .btn-outline {
        color: #4fbfa8;
        background-color: #ffffff;
        border-color: #4fbfa8;
        font-weight: bold;
        letter-spacing: 0.05em;
    }

    .btn-outline:hover,
    .btn-outline:active,
    .btn-outline:focus,
    .btn-outline.active {
        background: #4fbfa8;
        color: #ffffff;
