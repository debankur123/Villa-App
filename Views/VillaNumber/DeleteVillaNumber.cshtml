@model VillaNumberVM

<!--suppress ALL -->
<div class="modal fade" id="DeleteProduct-@Model.VillaNumber!.Villa_Number" aria-labelledby="DeleteProductLabel" aria-hidden="true">
    <div class="modal-dialog text-center">
        <div class="modal-content text-center">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="deleteProductLabel">Delete Villa Number</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <input type="hidden" name="Id" value="@Model.VillaNumber.Villa_Number" />
                    <p>Are you sure you want to delete this record?</p>
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.VillaNumber!.Villa_Number)</div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-outline" data-bs-dismiss="modal" aria-label="Close">
                            <span><i class="material-icons align-middle me-1">cancel</i></span>CANCEL
                        </button>
                        <button type="submit" class="btn btn-danger" asp-area="" asp-controller="VillaNumber"
                                asp-action="DeleteVillaNumber">
                            <span><ion-icon name="trash-bin-sharp" class="me-1 align-middle ionic-icons"></ion-icon></span>DELETE
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

